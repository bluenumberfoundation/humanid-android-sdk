<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetWelcome"
    style="@style/AppBottomSheetDialogTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_twilightblue_top_corner"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingRight="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_24dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:src="@drawable/ic_others_pointer" />

    <FrameLayout
        android:id="@+id/flDialogWelcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgAppIcon"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:text="@string/label_mdb"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAppName"
                style="@style/HumanIdTextView.Medium.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/label_welcome"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="255dp"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:layout_marginEnd="@dimen/dimen_32dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="@dimen/dimen_4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnContinue"
                    android:layout_width="255dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidline_image"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/logo_humanid"
                        android:layout_width="45dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/dimen_12dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_logo_humanid_icon"
                        app:layout_constraintTop_toBottomOf="@id/guidline_image"
                        app:layout_constraintBottom_toBottomOf="@+id/guidline_image"

                        tools:ignore="MissingConstraints" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:orientation="vertical"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toEndOf="@id/logo_humanid"
                        app:layout_constraintTop_toBottomOf="@id/guidline_image"
                        app:layout_constraintBottom_toBottomOf="@+id/guidline_image" >



                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvContinue"
                                style="@style/HumanIdTextView.Medium.Black"
                                android:layout_width="135dp"
                                app:layout_constraintTop_toBottomOf="@id/guidline_image"
                                app:layout_constraintBottom_toBottomOf="@+id/guidline_image"

                                android:layout_height="35dp"
                                android:gravity="bottom"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:text="Anonymous Login with "
                                android:textSize="13dp"
                            tools:ignore="NotSibling" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:paddingTop="18dp"
                                android:paddingLeft="5dp"
                                app:layout_constraintTop_toBottomOf="@id/guidline_image"
                                app:layout_constraintBottom_toBottomOf="@+id/guidline_image"

                                app:layout_constraintRight_toRightOf="parent"
                                android:src="@drawable/ic_logo_humanid_text"
                                tools:ignore="NotSibling" />




                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button_FB"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                xmlns:facebook="http://schemas.android.com/apk/res-auto"
                facebook:com_facebook_login_text="Login with Facebook"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20dp" />
                <Button
                    android:id="@+id/fakefb_btn"
                    android:layout_width="255dp"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textSize="15sp"
                    android:visibility="visible"
                    android:alpha="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_20dp"/>


            </FrameLayout>

            <Button
                android:id="@+id/logout_button_FB"
                android:visibility="gone"
                android:text="Logout"
                app:backgroundTint="#3b5998"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="285dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_20dp"



                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTnC"
                style="@style/HumanIdTextView.Medium.LightMustard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_33dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:text="@string/label_agreement"
                android:textSize="@dimen/text_size_10sp"
                android:visibility="gone" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>